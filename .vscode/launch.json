{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Convex: dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run convex:dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Expo: start",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run start",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Worker: dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run worker:dev:clean",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Run: Convex + Expo",
      "configurations": ["Convex: dev", "Expo: start"],
      "stopAll": true
    },
    {
      "name": "Run: Convex + Worker + Expo",
      "configurations": ["Convex: dev", "Worker: dev", "Expo: start"],
      "stopAll": true
    }
  ]
}
